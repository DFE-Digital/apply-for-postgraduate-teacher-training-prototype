{% set gcses = data.applications[applicationId]["gcse"] | toArray %}
{% set applicationPath = '/application/' + applicationId %}

<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th class="govuk-table__header" scope="col" width="30%">Type</th>
      <th class="govuk-table__header" scope="col" width="10%">Grade</th>
      <th class="govuk-table__header" scope="col">Year awarded</th>
    {% if review != true %}
      <th class="govuk-table__header app-table__cell--action" scope="col">
        <span class="govuk-visually-hidden">Actions</span>
      </th>
    {% endif %}
    </tr>
  </thead>
  <tbody class="govuk-table__body">
  {% for item in gcses %}
    {% if item.type == "Missing" %}
    <tr class="govuk-table__row app-table__row--muted">
      <td class="govuk-table__cell">{{ item.subject }}</td>
      <td class="govuk-table__cell">Missing</td>
      <td class="govuk-table__cell">Have you considered how you will meet this requirement in time for the start of your course? Get advice from a training provider or <a href="https://getintoteaching.education.gov.uk/">Get into Teaching</a>.</td>
      {% if review != true %}
      <td class="govuk-table__cell app-table__cell--action">
        <a href="{{ applicationPath }}/qualifications/gcse/{{ item.id }}?referrer={{ referrer }}">Change<span class="govuk-visually-hidden"> GCSE qualification</span></a>
      </td>
      {% endif %}
    </tr>
    {% else %}
    <tr class="govuk-table__row">
      <td class="govuk-table__cell">{{ item.type }} {{ item.subject }}</td>
      <td class="govuk-table__cell">{{ item.grade }}</td>
      <td class="govuk-table__cell">{{ item.year }}</td>
      {% if review != true %}
      <td class="govuk-table__cell app-table__cell--action">
        <a href="{{ applicationPath }}/qualifications/gcse/{{ item.id }}?referrer={{ referrer }}">Change<span class="govuk-visually-hidden"> GCSE qualification</span>
        </a>
      </td>
      {% endif %}
    </tr>
    {% endif %}
  {% endfor %}
  </tbody>
</table>
