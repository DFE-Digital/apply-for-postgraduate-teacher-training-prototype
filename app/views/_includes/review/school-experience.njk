{% set complete = "true" if applicationValue(["completed", "school-experience"]) %}

{% if showIncomplete and complete != "true" %}
  {% set incompleteType = "warning" if errorList %}
  {% set incompleteId = "school-experience" %}
  {% set incompleteText = "Volunteering with children and young people is not marked as completed" %}
  {% set incompleteLink = "/school-experience?referrer=" + referrer %}
  {% set incompleteLinkText = "Do you have any experience working with children and young people?" %}
  {% include "_includes/review/incomplete.njk" %}
{% else %}
  {% set summaryBodyHtml %}
    {% include "_includes/item/school-experience.njk" %}
  {% endset %}
  {% if applicationValue(["school-experience","attained"]) == "false" %}
    {{ appSummaryCard({
      classes: "govuk-!-margin-bottom-6",
      headingLevel: 3,
      titleText: "Unpaid experience",
      html: summaryBodyHtml
    }) }}
  {% else %}
    <h3 class="govuk-heading-m">Unpaid experience</h3>
    {{ summaryBodyHtml | safe }}
  {% endif %}
{% endif %}
