{% set complete = references | length > 0 %}
{% if complete %}
  {% set references = references | toArray %}
  {% for item in references %}
    {% set refereeHtml %}
      {% include "_includes/item/reference.njk" %}
    {% endset %}
    {{ appSummaryCard({
      classes: "govuk-!-margin-bottom-6",
      headingLevel: 3,
      titleText: item.id | capitalize + " referee",
      actions: {
        items: [{
          href: applicationPath + "/referees/" + item.id + "/delete?referrer=" + referrer,
          text: "Delete referee"
        }]
      } if canAmendReferences,
      html: refereeHtml
    }) }}
  {% endfor %}
{% else %}
  {% set incompleteType = "warning" if errorList %}
  {% set incompleteId = "referees" %}
  {% set incompleteText = "Add 2 referees to your application" %}
  {% set incompleteLink = "/references/?referrer=" + referrer %}
  {% include "_includes/review/incomplete.njk" %}
{% endif %}
