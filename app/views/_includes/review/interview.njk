{% set complete = "true" if applicationValue(["completed", "interview"]) %}

{% if showIncomplete and complete != "true" %}
  {{ appSuggestion({
    id: "interview",
    title: "Interview needs not entered",
    warning: true if errorList,
    actions: {
      items: [{
        text: "Do you have any interview needs?",
        href: applicationPath + "/interview/review?referrer=" + referrer
      }]
    }
  }) }}
{% else %}
  {% set summaryBodyHtml %}
    {% include "_includes/item/interview.njk" %}
  {% endset %}
  {{ appSummaryCard({
    classes: "govuk-!-margin-bottom-6",
    headingLevel: 3,
    titleText: "Interview needs",
    html: summaryBodyHtml
  }) }}
{% endif %}
