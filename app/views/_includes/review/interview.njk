{% set applicationPath = "/application/" + applicationId %}
{% set interviewText = applicationValue(["interview"]) if applicationValue(["interview-choice"]) == "Yes" else "No" %}
{% set interviewHtml %}
  {{ govukSummaryList({
    rows: [{
      key: {
        text: "Interview preferences"
      },
      value: {
        text: interviewText | nl2br | safe
      },
      actions: {
        items: [{
          href: applicationPath + "/interview?referrer=" + referrer,
          text: "Change" if applicationValue(["interview"]) else "Add",
          visuallyHiddenText: "interview preferences"
        }]
      } if canAmend
    }]
  }) }}
{% endset %}

{% if applicationValue(["interview"]) %}
  {{ appSummaryCard({
    classes: "govuk-!-margin-bottom-6",
    html: interviewHtml
  }) }}
{% else %}

  {% set interviewHtml %}
    {# {{ govukErrorMessage({
      text: "Interview preferences incomplete",
      visuallyHiddenText: ""
    }) }} #}

    <p class="govuk-body">Interview preferences incomplete</p>

    {{govukButton({
      text: 'Go to section',
      classes: 'govuk-button--secondary govuk-!-margin-bottom-0'
    })}}

  {% endset %}

  {{ appSummaryCard({
    atttributes: {
      id: 'interview-preferences-error'
    },
    classes: "govuk-!-margin-bottom-6 app-summary-card--erro",
    html: interviewHtml
  }) }}

{% endif %}