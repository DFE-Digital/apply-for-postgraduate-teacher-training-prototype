{% set applicationPath = "/application/" + applicationId %}
{% set personalStatementHtml %}
  {{ govukSummaryList({
    rows: [{
      key: {
        text: "Why do you want to be a teacher?"
      },
      value: {
        text: (applicationValue(["personal-statement"]) or "Not entered") | nl2br | safe
      },
      actions: {
        items: [{
          href: applicationPath + "/personal-statement?referrer=" + referrer,
          text: "Change" if applicationValue(["personal-statement"]) else "Add",
          visuallyHiddenText: "why you want to be a teacher"
        }]
      } if canAmend
    }]
  }) }}
{% endset %}

{% if applicationValue(["personal-statement"]) %}
  {{ appSummaryCard({
    classes: "govuk-!-margin-bottom-6",
    html: personalStatementHtml
  }) }}
{% else %}


  {% set interviewHtml %}
    {# {{ govukErrorMessage({
      text: "Personal statement incomplete",
      visuallyHiddenText: ""
    }) }} #}

    <p class="govuk-body">Personal statement incomplete</p>

    {{govukButton({
      text: 'Go to section',
      classes: 'govuk-button--secondary govuk-!-margin-bottom-0'
    })}}

  {% endset %}

  {{ appSummaryCard({
    attributes: {
      id: 'personal-statement-error'
    },
    classes: "govuk-!-margin-bottom-6 app-summary-card--erro",
    html: interviewHtml
  }) }}
{% endif %}
