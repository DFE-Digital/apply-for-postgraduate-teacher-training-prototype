{% set complete = "true" if applicationValue(["completed", "personal-statement"]) %}

{% if showIncomplete and complete != "true" %}
  {% set incompleteType = "warning" if errorList %}
  {% set incompleteId = "personal-statement" %}
  {% set incompleteText = "Personal statement not entered" %}
  {% set incompleteLink = "/personal-statement/review?referrer=" + referrer %}
  {% set incompleteLinkText = "Why do you want to be a teacher?" %}
  {% include "_includes/review/incomplete.njk" %}
{% else %}
  <div class="govuk-inset-text app-inset-text--important govuk-!-width-two-thirds">
    <h3 class="govuk-heading-s govuk-!-margin-bottom-2">Have you proofread your personal statement?</h3>
    <p class="govuk-body">Training providers will pay attention to your spelling, punctuation and grammar. It is important to get it right.</p>
    <p class="govuk-body">The best way to proofread is to read your personal statement out loud. Or ask someone to check it for you.</p>
  </div>
  {% set summaryBodyHtml %}
    {% include "_includes/item/personal-statement.njk" %}
  {% endset %}
  {{ appSummaryCard({
    classes: "govuk-!-margin-bottom-6",
    headingLevel: 3,
    titleText: "Why you want to teach",
    html: summaryBodyHtml
  }) }}
{% endif %}
