{% set complete = "true" if applicationValue(["completed", "contact-details"]) %}

{% if showIncomplete and complete != "true" %}
  {{ appSuggestion({
    id: "contact-details",
    title: "Contact details not entered",
    warning: true if errorList,
    actions: {
      items: [{
        text: "Enter your contact details",
        href: applicationPath + "/contact-details/review?referrer=" + referrer
      }]
    }
  }) }}
{% else %}
  {% set summaryBodyHtml %}
    {% include "_includes/item/contact-details.njk" %}
  {% endset %}
  {{ appSummaryCard({
    classes: "govuk-!-margin-bottom-6",
    headingLevel: 3,
    titleText: "Contact information",
    html: summaryBodyHtml
  }) }}
{% endif %}
