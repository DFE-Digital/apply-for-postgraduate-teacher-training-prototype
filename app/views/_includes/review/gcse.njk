{% set item = applicationValue(["gcse", id]) %}
{% if item %}
  {% set gcseHtml %}
    {% include "_includes/item/gcse.njk" %}
  {% endset %}
  {{ appSummaryCard({
    classes: "govuk-!-margin-bottom-6",
    headingLevel: 3,
    titleText: item.type,
    html: gcseHtml
  }) }}
{% else %}
  {# <p class="govuk-body">Not entered.</p> #}

  {% set errorClass = "" %}
  {% if data.incomplete == 'true' %}
    {% set errorClass = " app-summary-card--error" %}
  {% endif %}

  {{ appSummaryCard({
    attributes: {
      id: 'gcse-error'
    },
    classes: "app-summary-card--incomplete govuk-!-margin-bottom-6" + errorClass,
    titleText: "Not entered",
    actions: {
      items: [{
        href: "",
        text: "Complete section"
      }]
    }
  }) }}
{% endif %}
