{% for choice in choices %}
  {% set provider = providers[choice.providerCode] %}
  {% set course = provider.courses[choice.courseCode] %}
  {% set item = choice %}
  {% set courseHtml %}
    {% include "_includes/item/choice.njk" %}
  {% endset %}
  {{ appSummaryCard({
    classes: "govuk-!-margin-bottom-6",
    headingLevel: 3,
    titleText: provider.name,
    actions: {
      items: [{
        href: applicationPath + "/choices/" + item.id + "/delete?referrer=" + referrer,
        text: "Delete choice"
      } if review == true, {
        href: applicationPath + "/" + item.id + "/withdraw?referrer=" + referrer,
        text: "Withdraw choice"
      } if canWithdraw == true and item.status != "withdrawn"]
    } if review or withdraw,
    html: courseHtml
  }) }}
{% endfor %}
