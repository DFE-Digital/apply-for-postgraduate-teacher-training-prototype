{% set applicationPath = "/application/" + applicationId %}

{{ govukSummaryList({
  rows: [{
    key: {
      text: "Degree type"
    },
    value: {
      text: item["type-uk"] or item["type-nonuk"] or "Not entered"
    },
    actions: {
      items: [{
        href: applicationPath + "/degree/" + item.id + "?referrer=" + referrer,
        text: "Change",
        visuallyHiddenText: "degree type"
      }]
    } if canAmend
  }, {
    key: {
      text: "Subject"
    },
    value: {
      text: item.subject or "Not entered"
    },
    actions: {
      items: [{
        href: applicationPath + "/degree/" + item.id + "/subject?referrer=" + referrer,
        text: "Change",
        visuallyHiddenText: "subject"
      }]
    } if canAmend
  }, {
    key: {
      text: "Institution"
    },
    value: {
      text: item.org or "Not entered"
    },
    actions: {
      items: [{
        href: applicationPath + "/degree/" + item.id + "/institution?referrer=" + referrer,
        text: "Change",
        visuallyHiddenText: "institution"
      }]
    } if canAmend
  }, {
    key: {
      text: "Country"
    },
    value: {
      text: item.country | safe
    },
    actions: {
      items: [{
        href: applicationPath + "/degree/" + item.id + "?referrer=" + referrer,
        text: "Change",
        visuallyHiddenText: "country"
      }]
    } if canAmend
  } if item.country, {
    key: {
      text: "Grade"
    },
    value: {
      text: (item["grade-predicted"] + " (Predicted)" if item["grade"] == "Pending") or item.grade or item["grade-other"] or "Not entered"
    },
    actions: {
      items: [{
        href: applicationPath + "/degree/" + item.id + "/grade?referrer=" + referrer,
        text: "Change",
        visuallyHiddenText: "grade"
      }]
    } if canAmend
  }, {
    key: {
      text: "Dates"
    },
    value: {
      text: item["year-start"] + " - " + item["year-end"] or "Not entered"
    },
    actions: {
      items: [{
        href: applicationPath + "/degree/" + item.id + "/year?referrer=" + referrer,
        text: "Change",
        visuallyHiddenText: "dates"
      }]
    } if canAmend
  }]
}) }}
