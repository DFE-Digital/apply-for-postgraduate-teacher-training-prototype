{% set applicationPath = "/application/" + applicationId %}
{% set status = item.status or "Awaiting response" %}

{% if applicationValue('apply2') %}
  {% set showReferenceStatus = true %}
{% endif %}

{% if status == "Reference given" %}
  {% set canAmendReferences = false %}
{% endif %}

{% set statusHtml %}
  {{ govukTag({
    classes: "app-tag " + status | statusClass,
    text: status | capitalize
  }) }}
{% endset %}

{% set contextHtml %}
  {% if status == "Not requested yet" %}
    <p class="govuk-body govuk-!-margin-top-2">Weâ€™ll contact your referee when you submit your application</p>
  {% endif %}
{% endset %}

{{ govukSummaryList({
  rows: [{
    key: {
      text: "Name"
    },
    value: {
      text: item.name or "Not entered"
    },
    actions: {
      items: [{
        href: applicationPath + "/references/details/" + item.id + "?referrer=" + referrer,
        text: "Change",
        visuallyHiddenText: "referee"
      }]
    } if canAmendReferences
  }, {
    key: {
      text: "Email"
    },
    value: {
      text: item.email or "Not entered"
    },
    actions: {
      items: [{
        href: applicationPath + "/references/details/" + item.id + "?referrer=" + referrer,
        text: "Change",
        visuallyHiddenText: "referee"
      }]
    } if canAmendReferences
  }, {
    key: {
      text: "Reference type"
    },
    value: {
      text: item.type or "Not entered"
    },
    actions: {
      items: [{
        href: applicationPath + "/references/type/" + item.id + "?referrer=" + referrer,
        text: "Change",
        visuallyHiddenText: "referee"
      }]
    } if canAmendReferences
  }, {
    key: {
      text: "Relationship"
    },
    value: {
      text: (item.relationship or "Not entered") | nl2br | safe
    },
    actions: {
      items: [{
        href: applicationPath + "/references/details/" + item.id + "?referrer=" + referrer,
        text: "Change",
        visuallyHiddenText: "referee"
      }]
    } if canAmendReferences
  }, {
    key: {
      text: "Status"
    },
    value: {
      html: statusHtml + contextHtml
    }
  } if status and showReferenceStatus]
}) }}

