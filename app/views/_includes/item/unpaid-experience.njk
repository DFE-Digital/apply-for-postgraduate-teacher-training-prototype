{% set unpaidExperience = applicationValue(["unpaid-experience"]) %}
{% set roles = unpaidExperience | toArray | selectattr("id") | sort(attribute="start-date") %}

{% if roles.length >= 1 %}
  {% for item in roles %}
    {% set roleHtml %}
      {% include "_includes/item/role.njk" %}
    {% endset %}
    {{ appSummaryCard({
      classes: "govuk-!-margin-bottom-6",
      headingLevel: 3,
      titleHtml: item.role,
      actions: {
        items: [{
          href: applicationPath + "/unpaid-experience/" + item.id + "/delete?referrer=" + referrer,
          text: "Delete role"
        }]
      } if canAmend,
      html: roleHtml
    }) }}
  {% endfor %}
{% elif applicationValue(["unpaid-experience-disclose"]) == "No" %}
  {{ appSummaryCard({
    classes: "govuk-!-margin-bottom-6",
    html: govukSummaryList({
      rows: [{
        key: {
          text: "Do you have any unpaid experience?"
        },
        value: {
          text: applicationValue(["unpaid-experience-disclose"])
        },
        actions: {
          items: [{
            href: applicationPath + "/unpaid-experience?referrer=" + referrer,
            text: "Change",
            visuallyHiddenText: "if you have any unpaid experience"
          }]
        } if canAmend
      }]
    })
  }) }}
{% endif %}
