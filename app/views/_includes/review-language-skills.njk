{% set textContent %}
  {% if data["language-skills"]["main"] %}
    {{ data["language-skills"]["main"] }}.
    {% if data["language-skills"]["english"] %}
      {{ data["language-skills"]["english"] }}
    {% elif data["language-skills"]["other"] %}
      {{ data["language-skills"]["other"] }}
    {% endif %}
  {% else %}
    Not entered
  {% endif %}
{% endset %}

{{ govukSummaryList({
  classes: "govuk-!-font-size-16",
  rows: [{
    key: {
      text: "Is English your first language?"
    },
    value: {
      text: textContent
    },
    actions: {
      classes: "govuk-!-padding-right-2",
      items: [{
        href: "/application/language-skills/edit?referrer=" + referrer,
        text: "Edit",
        visuallyHiddenText: "English language qualifications"
      }]
    } if review != true
  }]
}) }}
