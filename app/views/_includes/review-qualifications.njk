{% set qualifications = data.applications[applicationId]["qualifications"] | toArray %}
{% set applicationPath = '/application/' + applicationId %}

<table class="govuk-table govuk-!-font-size-16">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th class="govuk-table__header" scope="col" width="30%">{{ categoryTitle }}</th>
      <th class="govuk-table__header" scope="col" width="10%">Grade</th>
    {% if category != "gcse" %}
      <th class="govuk-table__header" scope="col">Institution</th>
    {% endif %}
      <th class="govuk-table__header" scope="col">Year awarded</th>
    {% if review != true %}
      <th class="govuk-table__header app-table__cell--action" scope="col">
        <span class="govuk-visually-hidden">Actions</span>
      </th>
    {% endif %}
    </tr>
  </thead>
  <tbody class="govuk-table__body">
{% for item in qualifications %}
  {% if item.category == category %}
    {% if item.provenance == "missing" %}
    <tr class="govuk-table__row app-table__row--muted">
      <td class="govuk-table__cell">{{ item.subject }}</td>
      <td class="govuk-table__cell">Missing</td>
      <td class="govuk-table__cell"{{ " colspan=\"2\"" if category != "gcse" }}>Have you considered how you will meet this requirement in time for the start of your course? Get advice from a training provider or <a href="https://getintoteaching.education.gov.uk/">Get into Teaching</a>.</td>
      {% if review != true %}
      <td class="govuk-table__cell app-table__cell--action">
        <a href="{{ applicationPath }}/qualifications/edit/{{ category }}/{{ item.id }}?referrer={{ referrer }}">Edit<span class="govuk-visually-hidden"> {{ category}} qualification</span></a>
      </td>
      {% endif %}
    </tr>
    {% else %}
    <tr class="govuk-table__row">
      <td class="govuk-table__cell">{{ item.type }} {{ item.subject }}</td>
      <td class="govuk-table__cell">{{ item.grade }}</td>
      {% if category != "gcse" %}
      <td class="govuk-table__cell">
        {{ [item.institution, item.country] | join("<br>") | safe }}
      </td>
      {% endif %}
      <td class="govuk-table__cell">{{ item.year }}</td>
      {% if review != true %}
      <td class="govuk-table__cell app-table__cell--action">
        <a href="{{ applicationPath }}/qualifications/edit/{{ category }}/{{ item.id }}?referrer={{ referrer }}">Edit<span class="govuk-visually-hidden"> {{ category}} qualification</span>
        </a>
      </td>
      {% endif %}
    </tr>
    {% endif %}
  {% endif %}
{% endfor %}
  </tbody>
</table>
