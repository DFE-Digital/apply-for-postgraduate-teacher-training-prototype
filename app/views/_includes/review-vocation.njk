{% set applicationPath = '/application/' + applicationId %}
{{ govukSummaryList({
  classes: "govuk-!-font-size-16",
  rows: [{
    key: {
      text: "Tell us why you want to be a teacher"
    },
    value: {
      text: (applicationValue(["vocation", "statement"]) | default("Not entered")) | nl2br | safe
    },
    actions: {
      classes: "govuk-!-padding-right-2",
      items: [{
        href: applicationPath + "/vocation?referrer=" + referrer,
        text: "Change",
        visuallyHiddenText: "teaching vocation"
      }]
    } if review != true
  }]
}) }}
