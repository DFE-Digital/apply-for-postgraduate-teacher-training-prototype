{% set references = data['referees'] | toArray %}
{% if references.length >= 1 %}
  <table class="govuk-table govuk-!-font-size-16">
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th class="govuk-table__header" scope="col" width="30%">Referee</th>
        <th class="govuk-table__header" scope="col">Relationship</th>
        <th class="govuk-table__header" scope="col">Email</th>
        {% if review != true %}
        <th class="govuk-table__header app-table__cell--action" scope="col">
          <span class="govuk-visually-hidden">Actions</span>
        </th>
        {% endif %}
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      {% for item in references %}
      <tr class="govuk-table__row">
        <th class="govuk-table__header">
          <h3 class="app-heading-xs govuk-!-margin-0">{{ item.name }}</h3>
          <p class="app-caption-xs govuk-!-margin-0">{{ item.relationship }}</p>
        </th>
        <td class="govuk-table__cell">
          <p class="govuk-body-s">{{ item.timespan }}</p>
          <p class="govuk-body-s">
            {{ "This is a character reference â€“ " + item["character-explanation"] if item["character-explanation"] }}
          </p>
        </td>
        <td class="govuk-table__cell">{{ item.email }}</td>
        {% if review != true %}
        <td class="govuk-table__cell app-table__cell--action">
          <a href="/application/references/edit/referee/{{ item.id }}?referrer={{ referrer }}">Edit<span class="govuk-visually-hidden"> referee</span></a>
        </td>
        {% endif %}
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% else %}
  <p class="govuk-body-s">No references entered</p>
{% endif %}
