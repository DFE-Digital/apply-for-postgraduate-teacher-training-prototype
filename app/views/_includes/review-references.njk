{% set references = data['referees'] | toArray %}
{% if references.length >= 1 %}
  <table class="govuk-table govuk-!-font-size-16">
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th class="govuk-table__header" scope="col" width="30%">Referee name</th>
        <th class="govuk-table__header" scope="col">Type</th>
        <th class="govuk-table__header" scope="col">Email</th>
        <th class="govuk-table__header" scope="col">
          <span class="govuk-visually-hidden">Actions</span>
        </th>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      {% for item in references %}
      <tr class="govuk-table__row">
        <th class="govuk-table__header">{{ item.name }}</th>
        <td class="govuk-table__cell">
          {{ item.type }} ({{ item.relationship }})
        {% if item["character-explanation"] %}
          <br>{{ item["character-explanation"] }}
        {% endif %}
        </td>
        <td class="govuk-table__cell">{{ item.email }}</td>
        <td class="govuk-table__cell">
          <a href="/profile/references/edit/referee/{{ item.id }}?referrer={{ referrer }}">Edit<span class="govuk-visually-hidden"> referee</span></a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% else %}
  <p class="govuk-body-s">No references entered</p>
{% endif %}
