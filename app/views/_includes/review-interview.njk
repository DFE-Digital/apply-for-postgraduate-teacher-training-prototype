{% set applicationPath = '/application/' + applicationId %}
{{ govukSummaryList({
  classes: "app-summary",
  rows: [{
    key: {
      text: "Answer"
    },
    value: {
      text: (applicationValue("interview") | default("Not entered")) | nl2br | safe
    },
    actions: {
      classes: "govuk-!-padding-right-2",
      items: [{
        href: applicationPath + "/interview?referrer=" + referrer,
        text: "Change",
        visuallyHiddenText: "interview preferences"
      }]
    } if review != true
  }]
}) }}
