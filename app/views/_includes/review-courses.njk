{% set courses = applicationValue("courses") | toArray %}
<table class="govuk-table govuk-!-font-size-16 govuk-!-margin-bottom-3">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th class="govuk-table__header" scope="col">Course</th>
      <th class="govuk-table__header app-table__cell--action" scope="col">
        <span class="govuk-visually-hidden">Actions</span>
      </th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
  {% for c in courses %}
    {% set provider = providers[c.providerCode] %}
    {% set course = provider.courses[c.courseCode] %}
    <tr class="govuk-table__row">
      <td class="govuk-table__cell">
        <span>{{ provider.name }}</span>
        <h3 class="govuk-heading-s govuk-!-margin-bottom-1">{{ course.name_and_code }}</h3>
        <p class="app-caption-xs govuk-!-margin-0">{{ course.description }}</p>
      </td>
      <td class="govuk-table__cell app-table__cell--action">
        <a href="#">Remove</a>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>
