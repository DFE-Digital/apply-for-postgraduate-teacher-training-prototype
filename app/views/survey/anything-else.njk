{% extends "_form.njk" %}

{% set title = "Is there anything else you would like to tell us?" %}
{% set formaction = "/survey/consent-for-research" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/survey/improvements"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action="{{ formaction }}" method="post" novalidate>
        {{ govukCharacterCount({
          label: {
            text: title,
            isPageHeading: true,
            classes: "govuk-label--xl govuk-!-margin-bottom-8"
          },
          id: "miscellaneous",
          name: "miscellaneous",
          rows: 8,
          maxlength: 400
        }) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
