{% extends "_form.njk" %}

{% set title = "If you could improve anything on " + serviceName + " what would it be?" %}
{% set formaction = "/survey/anything-else" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/survey/experience-10"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action="{{ formaction }}" method="post" novalidate>
        {{ govukCharacterCount({
          label: {
            text: title,
            isPageHeading: true,
            classes: "govuk-label--xl govuk-!-margin-bottom-8"
          },
          id: "improvements",
          name: "improvements",
          rows: 8,
          maxlength: 400
        }) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
