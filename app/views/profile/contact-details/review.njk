{% extends "_form.njk" %}

{% set formAction = "/profile/" %}
{% set parent = "Contact details" %}
{% set title = "Review your answers" %}

{% block pageNavigation %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Home",
      href: "/dashboard"
    }, {
      text: "Your details",
      href: "/profile"
    }, {
      text: title
    }]
  }) }}
{% endblock %}

{% block primary %}
  {% include "_includes/review-contact-details.njk" %}

  {{ govukInput({
    id: "contact-details-completed",
    name: "contact-details-completed",
    type: "hidden",
    value: true
  }) }}

  {{ govukButton({
    text: "Continue"
  }) }}
{% endblock %}
