{% extends "_form.njk" %}

{% set title = "Academic qualifications" %}
{% set formAction = "/profile/" %}

{% block pageNavigation %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Home",
      href: "/dashboard"
    }, {
      text: "Personal teaching profile",
      href: "/profile"
    }, {
      text: title
    }]
  }) }}
{% endblock %}

{% block primary %}
  {% set category = "degree" %}
  {% set categoryTitle = "Degree(s)" %}
  {% include "_includes/review-qualifications.njk" %}
  {{ govukButton({
    text: "Add another degree",
    classes: "govuk-button--secondary",
    href: "/profile/qualifications/add/degree"
  }) }}

  {% set category = "gcse" %}
  {% set categoryTitle = "Required subjects" %}
  {% include "_includes/review-qualifications.njk" %}

{% if data["settings"]["has-other-qualifications"] %}
  {% set category = "other" %}
  {% set categoryTitle = "Other relevant qualifications" %}
  {% include "_includes/review-qualifications.njk" %}
{% else %}
  <h2 class="govuk-heading-m">Other relevant qualifications</h2>
  <p class="govuk-body">Enter your remaining GCSEs, A levels, and any practical, vocational or arts-based qualifications.</p>
  {{ govukButton({
    text: "Add qualification",
    classes: "govuk-button--secondary",
    href: "/profile/qualifications/add/other"
  }) }}
{% endif %}

  {{ govukCharacterCount({
    label: {
      text: "Is there anything youâ€™d like to tell us about your qualifications?",
      classes: "govuk-label--m"
    },
    hint: {
                                text: "For example, you can tell us how you plan to fill gaps in your basic eligibility or validate non-UK qualifications."
                            },
    maxwords: 600,
    rows: 12,
    id: "subject-knowledge-additional",
    name: "subject-knowledge-additional",
    value: data["subject-knowledge-additional"]
  }) }}

  {{ govukButton({
    text: "Save and continue"
  }) }}
{% endblock %}
