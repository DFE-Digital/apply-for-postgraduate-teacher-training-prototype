{% extends "_form.njk" %}

{% set title = "School experience and volunteering with children and young people" %}
{% set formAction = "/profile/" %}

{% block pageNavigation %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Home",
      href: "/dashboard"
    }, {
      text: "Your details",
      href: "/profile"
    }, {
      text: title
    }]
  }) }}
{% endblock %}

{% block primary %}
  {{ govukTable({
    caption: "Your school experience and roles",
    captionClasses: "govuk-heading-m",
    classes: "govuk-!-font-size-16",
    firstCellIsHeader: false,
    head: [{
      text: "Dates",
      classes: "govuk-!-width-one-quarter"
    }, {
      text: "Role"
    }, {
      text: "Organisation"
    }, {
      text: "Actions"
    }],
    rows: [
      [{
        text: data['school-experience-start-month'] + '/' + data['school-experience-start-year'] + ' - ' + data['school-experience-end-month'] + '/' + data['school-experience-end-year']
      }, {
        text: data['school-experience-role']
      }, {
        text: data['school-experience-org']
      }, {
        html: "<a href=\"/profile/school-experience/edit-role\">Edit role</a>"
      }]
    ]
  }) }}

  {{ govukButton({
    text: "Add another role",
    href: "/profile/school-experience/add-role",
    classes: "govuk-button--secondary"
  }) }}

  {{ govukCharacterCount({
    label: {
      text: "Summarise what your experience in school has taught you about teaching",
      classes: "govuk-label--m"
    },
    hint: {
      text: "For example, behaviour management, lesson planning, learning objectives, communicating verbally and non-verbally, supporting more and less able children"
    },
    id: "subject-knowledge-additional",
    name: "subject-knowledge-additional",
    value: data["subject-knowledge-additional"],
    maxlength: 600,
    rows: 12
  }) }}

  {{ govukInput({
    id: "school-experience-completed",
    name: "school-experience-completed",
    type: "hidden",
    value: true
  }) }}

  {{ govukButton({
    text: "Save and continue"
  }) }}
{% endblock %}
