{% extends "_form.njk" %}

{% set parent = "School experience and volunteering with children and young people" %}
{% set formAction = "/profile/school-experience/review" %}

{% block primary %}
  {{ govukInput({
    label: {
      text: "Your role",
      classes: "govuk-label--s"
    },
    id: "school_experience[" + id + "][role]",
    name: "school_experience[" + id + "][role]",
    value: data["school_experience"][id].role
  }) }}

  {{ govukInput({
    label: {
      text: "Organisation where you gained experience or volunteered",
      classes: "govuk-label--s"
    },
    id: "school_experience[" + id + "][org]",
    name: "school_experience[" + id + "][org]",
    value: data["school_experience"][id].org
  }) }}

  {{ govukDateInput({
    fieldset: {
      legend: {
        text: "Start date",
        classes: "govuk-fieldset__legend--s"
      }
    },
    hint: {
      text: "For example, 05 2018"
    },
    id: "school_experience[" + id + "][start]",
    items: [{
      label: "Day",
      name: "school_experience[" + id + "][start-day]",
      value: data["school_experience"][id]["start-day"],
      classes: "govuk-input--width-2"
    }, {
      label: "Month",
      name: "school_experience[" + id + "][start-month]",
      value: data["school_experience"][id]["start-month"],
      classes: "govuk-input--width-2"
    }, {
      label: "Year",
      name: "school_experience[" + id + "][start-year]",
      value: data["school_experience"][id]["start-year"],
      classes: "govuk-input--width-4"
    }]
  }) }}

  {{ govukDateInput({
    fieldset: {
      legend: {
        text: "End date (leave blank if this is your current role)",
        classes: "govuk-fieldset__legend--s"
      }
    },
    hint: {
      text: "For example, 05 2019"
    },
    id: "school_experience[" + id + "][end]",
    items: [{
      label: "Day",
      name: "school_experience[" + id + "][end-day]",
      value: data["school_experience"][id]["end-day"],
      classes: "govuk-input--width-2"
    }, {
      label: "Month",
      name: "school_experience[" + id + "][end-month]",
      value: data["school_experience"][id]["end-month"],
      classes: "govuk-input--width-2"
    }, {
      label: "Year",
      name: "school_experience[" + id + "][end-year]",
      value: data["school_experience"][id]["end-year"],
      classes: "govuk-input--width-4"
    }]
  }) }}

{% if action != "edit" %}
  {{ govukButton({
    html: "Save and add another role",
    classes: "govuk-button--secondary",
    attributes: {
      formaction: "/profile/school-experience/add-role"
    }
  }) }}
{% endif %}
  {{ govukButton({
    text: buttonText
  }) }}
{% endblock %}
