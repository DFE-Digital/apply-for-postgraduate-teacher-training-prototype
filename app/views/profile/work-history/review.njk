{% extends "_form.njk" %}

{% set formAction = "/profile/" %}
{% set title = "Work history" %}

{% block pageNavigation %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Home",
      href: "/dashboard"
    }, {
      text: "Your details",
      href: "/profile"
    }, {
      text: title
    }]
  }) }}
{% endblock %}

{% block primary %}
  {% include "_includes/review-work-history.njk" %}

  {{ govukButton({
    html: "Add another job",
    classes: "govuk-button--secondary",
    href: "/profile/work-history/add-job"
  }) }}

  {{ govukButton({
    text: "Save and continue"
  }) }}
{% endblock %}
