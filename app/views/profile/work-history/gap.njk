{% extends "_form.njk" %}

{% set parent = "Work history" %}
{% set title = "Explain gap in work history" %}
{% if action == "edit" %}
  {% set buttonText = "Save changes" %}
{% else %}
  {% set buttonText = "Save and continue" %}
{% endif %}

{% block primary %}
  {{ govukDateInput({
    fieldset: {
      legend: {
        text: "Start of gap",
        classes: "govuk-fieldset__legend--s"
      }
    },
    hint: {
      text: "For example, 01 2018"
    },
    id: "work-history-" + id + "-start-date",
    namePrefix: "start-date",
    items: [{
      classes: "govuk-input--width-2",
      label: "Month",
      name: "month",
      value: data["work-history"][id]["start-date"] | date('LL')
    }, {
      classes: "govuk-input--width-4",
      label: "Year",
      name: "year",
      value: data["work-history"][id]["start-date"] | date('yyyy')
    }]
  }) }}

  {{ govukDateInput({
    fieldset: {
      legend: {
        text: "End of gap",
        classes: "govuk-fieldset__legend--s"
      }
    },
    hint: {
      text: "For example, 05 2018"
    },
    id: "work-history-" + id + "-end-date",
    namePrefix: "end-date",
    items: [{
      classes: "govuk-input--width-2",
      label: "Month",
      name: "month",
      value: data["work-history"][id]["end-date"] | date('LL')
    }, {
      classes: "govuk-input--width-4",
      label: "Year",
      name: "year",
      value: data["work-history"][id]["end-date"] | date('yyyy')
    }]
  }) }}

  {{ govukCharacterCount({
    label: {
      text: "Reason(s) for this gap in your work history",
      classes: "govuk-label--s"
    },
    maxwords: 400,
    id: "work-history-" + id + "-description",
    name: "work-history[" + id + "][description]",
    value: data["work-history"][id]["description"]
  }) }}

  {{ govukInput({
    type: "hidden",
    name: "work-history[" + id + "][gap]",
    value: "true"
  }) }}

  {{ govukButton({
    text: buttonText
  }) }}
{% endblock %}
