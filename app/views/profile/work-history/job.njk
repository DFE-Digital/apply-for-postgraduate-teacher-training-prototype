{% extends "_form.njk" %}

{% set parent = "Work history" %}
{% set formAction = "/profile/work-history/review" %}

{% block primary %}
  {{ govukInput({
    label: {
      text: "Job title",
      classes: "govuk-label--s"
    },
    id: "work_history["+code+"][role]",
    name: "work_history["+code+"][role]",
    value: data["work_history"][code].role
  }) }}

  {{ govukInput({
    label: {
      text: "Name of employer",
      classes: "govuk-label--s"
    },
    id: "work_history["+code+"][org]",
    name: "work_history["+code+"][org]",
    value: data["work_history"][code].org
  }) }}

  {{ govukDateInput({
    fieldset: {
      legend: {
        text: "Start date",
        classes: "govuk-fieldset__legend--s"
      }
    },
    hint: {
      text: "For example, 05 2018"
    },
    items: [{
      label: "Month",
      name: "work_history["+code+"][start_month]",
      value: data["work_history"][code]["start_month"],
      classes: "govuk-input--width-2"
    }, {
      label: "Year",
      name: "work_history["+code+"][start_year]",
      value: data["work_history"][code]["start_year"],
      classes: "govuk-input--width-4"
    }],
    id: "work_history["+code+"][start]"
  }) }}

  {{ govukDateInput({
    fieldset: {
      legend: {
        text: "End date (leave blank if this is your current role)",
        classes: "govuk-fieldset__legend--s"
      }
    },
    hint: {
      text: "For example, 05 2019"
    },
    items: [{
      label: "Month",
      name: "work_history["+code+"][end_month]",
      value: data["work_history"][code][end_month],
      classes: "govuk-input--width-2"
    }, {
      label: "Year",
      name: "work_history["+code+"][end_year]",
      value: data["work_history"][code][end_year],
      classes: "govuk-input--width-4"
    }],
    id: "work_history["+code+"][end]"
  }) }}

  {{ govukCharacterCount({
    label: {
      text: "Skills and experience relevant to teaching you gained in this role",
      classes: "govuk-label--s"
    },
    hint: {
      text: "Give examples showing how you developed transferrable skills like communication, creativity and organisation. Enter experience relevant to your subject in the subject knowledge section"
    },
    id: "work_history["+code+"][job_description]",
    name: "work_history["+code+"][job_description]",
    value: data["work_history"][code].job_description,
    maxwords: 150
  }) }}

  {{ govukRadios({
    fieldset: {
      legend: {
        text: "Did this job involve working in a school or with children?",
        classes: "govuk-fieldset__legend--s"
      }
    },
    classes: "govuk-radios--inline",
    idPrefix: "work_history["+code+"][worked_with_children]",
    name: "work_history["+code+"][worked_with_children]",
    items: [{
      value: "yes",
      text: "Yes",
      checked: checked("['work_history']['"+code+"']['worked_with_children']", "yes")
    }, {
      value: "no",
      text: "No",
      checked: checked("['work_history']['"+code+"']['worked_with_children']", "no")
    }]
  }) }}

{% if action != "edit" %}
  {{ govukButton({
    html: "Save and add another job",
    classes: "govuk-button--secondary",
    attributes: {
      formaction: "/profile/work-history/add-job"
    }
  }) }}
{% endif %}
  {{ govukButton({
    text: buttonText
  }) }}
{% endblock %}
