{% extends "_form.njk" %}

{% set title = "Check we’re ready for you to use this service" %}

{% set formaction = "/check-you-can-use-this-service/answer" %}

{% block pageNavigation %}
  {{ govukBackLink({
    "href": "/"
  }) }}
{% endblock %}

{% block primary %}
  <p class="govuk-body">This service is new so it’s not ready for everyone yet. Check if we’re ready for you by answering the questions below.</p>
  <p class="govuk-body govuk-!-margin-bottom-7">If you can’t use our service, you can still apply for teacher training through&nbsp;<a href="https://2020.teachertraining.apply.ucas.com/apply/student/login.do">UCAS</a>.</p>

  {{ govukRadios({
    classes: "govuk-radios--inline",
    idPrefix: "eligibile-nationality",
    name: "eligibile-nationality",
    fieldset: {
      legend: {
        text: "Are you a citizen of the UK or the EU?",
        classes: "govuk-fieldset__legend--m"
      }
    },
    items: [{
      value: "yes",
      text: "Yes"
    }, {
      value: "no",
      text: "No"
    }]
  }) }}

  {{ govukRadios({
    classes: "govuk-radios--inline",
    idPrefix: "eligibile-equivalencies",
    name: "eligibile-equivalencies",
    fieldset: {
      legend: {
        text: "Did you gain all your qualifications at institutions based in the UK?",
        classes: "govuk-fieldset__legend--m"
      }
    },
    items: [{
      value: "yes",
      text: "Yes"
    }, {
      value: "no",
      text: "No"
    }]
  }) }}

  {{ govukButton({
    text: "Continue"
  }) }}
{% endblock %}
