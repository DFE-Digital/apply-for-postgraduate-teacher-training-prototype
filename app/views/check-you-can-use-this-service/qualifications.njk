{% extends "_form.njk" %}

{% set title = "Did you gain all your qualifications at institutions based in the UK?" %}
{% set hasAccountLinks = false %}

{% block pageNavigation %}
  {{ govukBackLink({
    "href": "/check-you-can-use-this-service/citizenship"
  }) }}
{% endblock %}

{% block primary %}
  {{ govukRadios({
    idPrefix: "answer",
    name: "answer",
    items: [{
      value: "yes",
      text: "Yes"
    }, {
      value: "no",
      text: "No"
    }]
  }) }}

  {{ govukButton({
    text: "Continue"
  }) }}
{% endblock %}
