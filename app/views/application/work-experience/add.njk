{% extends "_form.njk" %}
{% set title = "Add a job" %}
{% set parent = "Work history and relevant experience" %}
{% set formAction = "/application/work-experience" %}
{% block fieldset %}
  {{ govukInput({
    label: {
      text: "Job title",
      classes: "govuk-label--s"
    },
    id: "work-experience-title",
    name: "work-experience-title"
  }) }}

  {{ govukInput({
    label: {
      text: "Name of employer",
      classes: "govuk-label--s"
    },
    id: "work-experience-org",
    name: "work-experience-org"
  }) }}

  {{ govukDateInput({
    fieldset: {
      legend: {
        text: "Start date",
        classes: "govuk-fieldset__legend--s"
      }
    },
    hint: {
      text: "For example, 05 2018"
    },
    items: [{
      name: "month",
      classes: "govuk-input--width-2"
    }, {
      name: "year",
      classes: "govuk-input--width-4"
    }],
    id: "work-experience-start",
    namePrefix: "work-experience-start"
  }) }}

  {{ govukDateInput({
    fieldset: {
      legend: {
        text: "End date (leave blank if this is your current role)",
        classes: "govuk-fieldset__legend--s"
      }
    },
    hint: {
      text: "For example, 05 2019"
    },
    items: [{
      name: "month",
      classes: "govuk-input--width-2"
    }, {
      name: "year",
      classes: "govuk-input--width-4"
    }],
    id: "work-experience-end",
    namePrefix: "work-experience-end"
  }) }}

  {{ govukCharacterCount({
    label: {
      text: "Skills and experience relevant to teaching you gained in this role",
      classes: "govuk-label--s"
    },
    id: "work-experience-learnt",
    name: "work-experience-learnt",
    maxlength: 150
  }) }}

  {{ govukRadios({
    fieldset: {
      legend: {
        text: "Did this job involve working in a school or with children?",
        classes: "govuk-fieldset__legend--s"
      }
    },
    classes: "govuk-radios--inline",
    idPrefix: "work-experience-with-children",
    name: "work-experience-with-children",
    items: [{
      value: "yes",
      text: "Yes"
    }, {
      value: "no",
      text: "No"
    }]
  }) }}

  {{ govukButton({
    text: "Add experience"
  }) }}
{% endblock %}
