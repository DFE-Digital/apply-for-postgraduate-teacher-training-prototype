{% extends "_content.njk" %}
{% set applicationPath = '/application/' + applicationId %}
{% set title = "Your application for postgraduate teacher&nbsp;training" %}

{% block pageNavigation %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Applications",
      href: "/applications"
    }, {
      text: title | safe
    }]
  }) }}
{% endblock %}
{% block primary %}
  {% set hasSchoolExperience = data["school-experience"]["missing"] != "true" %}

  <h2 class="govuk-heading-m govuk-!-margin-bottom-1">Courses</h2>
  <p class="govuk-body">You can apply for up to 3 courses at a time.</p>

  {% if data["courses"] %}
    {% include "_includes/review-courses.njk" %}
    {% if data["courses"] | length <= 3 %}
      {{ govukButton({
        classes: "govuk-button--secondary",
        text: "Add another course",
        href: "#"
      }) }}
    {% endif %}
  {% else %}
    {{ govukButton({
      text: "Add course",
      href: "#"
    }) }}
  {% endif %}

  <h2 class="govuk-heading-m govuk-!-margin-top-4">About you</h2>
  {{ appTaskList({
    classes: "govuk-!-margin-bottom-8",
    items: [{
      text: "Personal details",
      href: applicationPath + "/personal-details" + ("/edit" if data["candidate"]["nationality"] else "/add"),
      id: "personal-details",
      completed: applicationValue(["candidate", "nationality"])
    }, {
      text: "Contact details",
      href: applicationPath + "/contact-details" + ("/edit" if data["contact-details"]["address"] else "/add"),
      id: "contact-details",
      completed: applicationValue(["contact-details", "address"])
    }, {
      text: "Academic qualifications",
      href: applicationPath + "/qualifications" + ("/review" if data["qualifications"]),
      id: "qualifications",
      completed: applicationValue("qualifications")
    }, {
      text: "Your knowledge about the subject you want to teach",
      href: applicationPath + "/subject-knowledge" + ("/edit" if data["subject-knowledge"] else "/add"),
      id: "subject-knowledge",
      completed: applicationValue("subject-knowledge")
    }, {
      text: "Work history",
      href: applicationPath + "/work-history" + ("/review" if data["work-history"]),
      id: "work-history",
      completed: applicationValue("work-history")
    }, {
      text: "School experience and volunteering with young people",
      href: applicationPath + "/school-experience" + ("/review" if data["school-experience"] and hasSchoolExperience),
      id: "school-experience",
      completed: applicationValue("school-experience")
    }, {
      text: "Why you want to be a teacher",
      href: applicationPath + "/vocation" + ("/edit" if data["vocation"] else "/add"),
      id: "vocation",
      completed: applicationValue("vocation")
    }]
  }) }}

  <h2 class="govuk-heading-m">References</h2>
  {{ appTaskList({
    classes: "govuk-!-margin-bottom-8",
    items: [{
      text: "References",
      href: applicationPath + "/references" + ("/review" if data["referees"]),
      id: "references",
      completed: applicationValue("referees")
    }]
  }) }}

  <h2 class="govuk-heading-m">Interview</h2>
  {{ appTaskList({
    classes: "govuk-!-margin-bottom-8",
    items: [{
      text: "Interview preferences",
      href: applicationPath + "/interview",
      id: "interview",
      completed: applicationValue("interview")
    }]
  }) }}

  <h2 class="govuk-heading-m">Review and submit</h2>
  {{ appTaskList({
    classes: "govuk-!-margin-bottom-8",
    items: [{
      text: "Check your answers before submitting",
      href: applicationPath + "/review",
      id: "review",
      completed: applicationValue("review")
    }]
  }) }}
{% endblock %}
