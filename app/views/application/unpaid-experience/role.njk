{% extends "_form.njk" %}

{% set applicationPath = "/application/" + applicationId %}
{% set parent = "Unpaid experience" %}
{% set action = "edit" if applicationValue(["unpaid-experience", id, "role"]) else "add" %}
{% set title = (action | capitalize) + " role" %}

{% block pageNavigation %}
  {% if referrer %}
    {{ govukBackLink({
      href: referrer
    }) }}
  {% else %}
    {{ govukBackLink({
      href: applicationPath + "/unpaid-experience"
    }) }}
  {% endif %}
{% endblock %}

{% block primary %}
  <p class="govuk-body">Do not include paid work in a school – enter these roles in ‘Work history’.</p>
  {{ govukInput({
    label: {
      text: "Your role",
      classes: "govuk-label--m"
    }
  } | decorateApplicationAttributes(["unpaid-experience", id, "role"])) }}

  {{ govukInput({
    label: {
      text: "Organisation where you gained experience or volunteered",
      classes: "govuk-label--m"
    }
  } | decorateApplicationAttributes(["unpaid-experience", id, "org"])) }}

  {{ govukRadios({
    fieldset: {
      legend: {
        text: "Did this role involve working in a school or with children?",
        classes: "govuk-fieldset__legend--m"
      }
    },
    items: [{
      text: "Yes"
    }, {
      text: "No"
    }]
  } | decorateApplicationAttributes(["unpaid-experience", id, "workedWithChildren"])) }}

  {% set startDate = applicationValue(["unpaid-experience", id, "startDate"]) %}
  {% set endDate = applicationValue(["unpaid-experience", id, "endDate"]) %}
  {{ govukDateInput({
    fieldset: {
      legend: {
        text: "When did you start this role?",
        classes: "govuk-fieldset__legend--m"
      }
    },
    hint: {
      text: "For example, 5 2018. If you cannot remember the exact month or year, enter an estimate."
    },
    namePrefix: id + "-startDate",
    items: [{
      label: "Month",
      name: "month",
      value: startDate | date("L"),
      classes: "govuk-input--width-2"
    }, {
      label: "Year",
      name: "year",
      value: startDate | date("yyyy"),
      classes: "govuk-input--width-4"
    }]
  } | decorateApplicationAttributes(["unpaid-experience", id, "startDate"])) }}

  {{ govukCheckboxes({
    items: [{
      value: "true",
      text: "I’m not sure the exact month or year I started"
    }]
  } | decorateApplicationAttributes(["unpaid-experience", id, "start-date-is-exact"])) }}

  {% set endDateHtml %}
    {{ govukDateInput({
      fieldset: {
        legend: {
          text: "When did you finish this role?",
          classes: "govuk-fieldset__legend--m"
        }
      },
      hint: {
        text: "For example, 5 2018. If you cannot remember the exact month or year, enter an estimate."
      },
      namePrefix: id + "-endDate",
      items: [{
        label: "Month",
        name: "month",
        value: endDate | date("L"),
        classes: "govuk-input--width-2"
      }, {
        label: "Year",
        name: "year",
        value: endDate | date("yyyy"),
        classes: "govuk-input--width-4"
      }]
    } | decorateApplicationAttributes(["unpaid-experience", id, "endDate"])) }}

    {{ govukCheckboxes({
      items: [{
        value: "true",
        text: "I’m not sure the exact month or year I left"
      }]
    } | decorateApplicationAttributes(["unpaid-experience", id, "end-date-is-exact"])) }}
  {% endset %}

  {{ govukRadios({
    fieldset: {
      legend: {
        text: "Are you still working in this role?",
        classes: "govuk-fieldset__legend--m"
      }
    },
    items: [{
      text: "Yes"
    }, {
      text: "No",
      conditional: {
        html: endDateHtml
      }
    }]
  } | decorateApplicationAttributes(["unpaid-experience", id, "endDate"])) }}

  {{ govukCharacterCount({
    label: {
      text: "Enter details of your time commitment and responsibilities",
      classes: "govuk-label--m"
    },
    hint: {
      text: "For example, ‘I volunteer in the classroom every Friday morning’ or ‘I spent 1 day observing in this school’ or ‘I am a Scout Leader involved in activities throughout the year’"
    },
    maxwords: 150
  } | decorateApplicationAttributes(["unpaid-experience", id, "time-commitment"])) }}

  {{ govukButton({
    text: "Save and continue"
  }) }}
{% endblock %}
