{% extends "_content-wide.njk" %}

{% set applicationPath = "/application/" + applicationId %}
{% set formaction = referrer or applicationPath %}

{% set parent = "Contact details" %}
{% set title = "Check your answers" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/application/" + applicationId,
    text: "Back to application"
  }) }}
{% endblock %}

{% block primary %}
  {% set referrer = applicationPath + "/contact-details/review" %}
  {% include "_includes/review-contact-details.njk" %}
  {{ govukButton({
    text: "Continue",
    href: applicationPath
  }) }}
{% endblock %}
