{% extends "_form.njk" %}

{% set subject = (id | capitalize) if id == "english" else id %}
{% set title = "Do you have a NARIC statement of comparability for your " + subject + " qualification?" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: paths.back
  }) }}
{% endblock %}

{% block primary %}
  {% set yesConditionalHtml %}
    {{ govukInput({
      label: {
        text: "UK NARIC reference number",
        classes: "govuk-label--s"
      },
      hint: {
        text: "For example ‘4000228363’"
      },
      classes: "govuk-input--width-20"
    } | decorateApplicationAttributes(["gcse", id, "naric-reference"])) }}

    {{ govukRadios({
      fieldset: {
        legend: {
          text: "Select the comparable UK qualification",
          classes: "govuk-fieldset__legend--s"
        }
      },
      hint: {
        text: "As shown on your statement"
      },
      items: [{
        text: "GCSE (grades A*-C / 9-4)"
      }, {
        text: "Between GCSE and GCE AS level"
      }, {
        text: "GCE Advanced Subsidiary (AS) level"
      }, {
        text: "GCE Advanced (A) level"
      }]
    } | decorateApplicationAttributes(["gcse", id, "naric-comparability"])) }}
  {% endset -%}

  {% set noConditionalHtml %}
    <h2 class="govuk-heading-s">If you studied for this qualification outside the UK, you will need to check that it is valid.</h2>
    <p class="govuk-body">Contact your training provider to check their policy on non-UK qualifications.</p>
    <p class="govuk-body">You can also register with <a href="https://getintoteaching.education.gov.uk">Get Into Teaching</a> to talk to a teacher training adviser. They’ll tell you if your qualification makes you eligible.</p>
  {% endset %}

  {{ govukRadios({
    items: [{
      text: "Yes",
      conditional: {
        html: yesConditionalHtml
      }
    }, {
      text: "No",
      conditional: {
        html: noConditionalHtml
      }
    }]
  } | decorateApplicationAttributes(["gcse", id, "naric"])) }}

  {{ govukButton({
    text: "Save and continue"
  }) }}
{% endblock %}
