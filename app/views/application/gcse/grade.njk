{% extends "_form.njk" %}

{% set subject = (id | capitalize) if id == "english" else id %}
{% set title = "What grade is your " + subject + " qualification?" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: paths.back
  }) }}
{% endblock %}

{% block primary %}
  {% set otherGradeHtml %}
    {{ govukInput({
      label: {
        text: "Please specify the grade"
      },
      classes: "govuk-input--width-10"
    } | decorateApplicationAttributes(["gcse", id, "grade"])) }}
  {% endset %}

  {{ govukRadios({
    items: [{
      value: "true",
      text: "I completed my qualification",
      conditional: {
        html: otherGradeHtml
      }
    }, {
      divider: "or"
    }, {
      value: "false",
      text: "I am still studying for my qualification"
    }]
  } | decorateApplicationAttributes(["gcse", id, "completed"])) }}

  {{ govukButton({
    text: "Save and continue"
  }) }}
{% endblock %}
