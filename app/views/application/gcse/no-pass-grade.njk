{% extends "_form.njk" %}

{% set subject = (id | capitalize) if id == "english" else id %}
{% set title = "You need a " + subject + " GCSE grade 4 (C) or above, or equivalent" %}
{% set allowsFeedback = true %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: referrer or paths.back
  }) }}
{% endblock %}

{% block primary %}
  {{ govukCharacterCount({
    label: {
      classes: "govuk-label--m",
      html: "Tell us how you will meet this requirement"
    },
    hint: {
      text: "For example, you are working towards this qualification or you have other qualifications which demonstrate equivalent skills"
    },
    maxwords: 200,
    rows: 6
  } | decorateApplicationAttributes(["gcse", id, "missing"])) }}

  {{ govukButton({
    text: "Save and continue"
  }) }}
{% endblock %}
