{% extends "_form.njk" %}

{% set applicationPath = "/application/" + applicationId %}
{% set degreeCount = applicationValue(["degree"]) | length %}
{% set title = "Do you have a NARIC statement of comparability for your degree?" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: paths.back
  }) }}
{% endblock %}

{% block primary %}
  <p class="govuk-body">This shows how your qualifications compare to UK qualifications.</p>

  {% set yesConditionalHtml %}
    {{ govukInput({
      label: {
        text: "UK NARIC reference number",
        classes: "govuk-label--s"
      },
      hint: {
        text: "For example ‘4000228363’"
      },
      classes: "govuk-input--width-20"
    } | decorateApplicationAttributes(["degree", id, "naric-reference"])) }}

    {{ govukRadios({
      fieldset: {
        legend: {
          text: "Select the comparable UK qualification",
          classes: "govuk-fieldset__legend--s"
        }
      },
      hint: {
        text: "As shown on your statement"
      },
      items: [{
        text: "Bachelor (Ordinary) degree"
      }, {
        text: "Bachelor (Honours) degree"
      }, {
        text: "Postgraduate Certificate / Postgraduate Diploma"
      }, {
        text: "Master’s degree / Integrated Master’s degree"
      }, {
        text: "Doctor of Philosophy degree"
      } if degreeCount > 1, {
        text: "Post Doctoral award"
      } if degreeCount > 1]
    } | decorateApplicationAttributes(["degree", id, "naric-comparability"])) }}
  {% endset -%}

  {% set noConditionalHtml %}
    <h2 class="govuk-heading-s">If you studied for your degree outside the UK, you will need to check that it’s valid</h2>
    <p class="govuk-body">Contact your training provider to check their policy on non-UK qualifications.</p>
    <p class="govuk-body">You can also register with <a href="https://getintoteaching.education.gov.uk">Get into Teaching</a> to talk to a teacher training adviser. They’ll tell you if your degree makes you eligible.</p>
  {% endset %}

  {{ govukRadios({
    items: [{
      text: "Yes",
      conditional: {
        html: yesConditionalHtml
      }
    }, {
      text: "No",
      conditional: {
        html: noConditionalHtml
      }
    }]
  } | decorateApplicationAttributes(["degree", id, "naric"])) }}

  {{ govukButton({
    text: "Save and continue"
  }) }}
{% endblock %}
