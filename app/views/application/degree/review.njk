{% extends "_content-wide.njk" %}

{% set applicationPath = "/application/" + applicationId %}
{% set referrer = applicationPath + "/degree/review" %}
{% set title = "Degree" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/application/" + applicationId,
    text: "Back to application"
  }) }}
{% endblock %}

{% block primary %}
  {% for degree in applicationValue(["degree"]) | toArray %}
    {% include "_includes/review-degree.njk" %}
  {% endfor %}
  {{ govukButton({
    text: "Add another degree",
    classes: "govuk-button--secondary",
    href: applicationPath + "/degree/add?referrer=" + referrer
  }) }}

  {{ govukButton({
    text: "Continue",
    href: applicationPath
  }) }}
{% endblock %}
