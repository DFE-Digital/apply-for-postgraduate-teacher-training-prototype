{% extends "_form.njk" %}

{% set applicationPath = "/application/" + applicationId %}
{% set parent = "Add a degree" %}
{% if applicationValue(["degree", degreeId, "grade"]) == "Pending" %}
  {% set pending = true %}
{% endif %}
{% if pending %}
  {% set title = "When will you graduate?" %}
{% else %}
  {% set title = "What year did you graduate?" %}
{% endif %}

{% block pageNavigation %}
  {{ govukBackLink({ href: paths.back }) }}
{% endblock %}

{% block primary %}
  {% if pending %}
    <p class="govuk-body">You must have successfully graduated by the time you start your course.</p>
  {% endif %}

  {{ govukInput({
    label: {
      text: "Enter year"
    },
    classes: "govuk-input--width-4"
  } | decorateApplicationAttributes(["degree", degreeId, "year"])) }}

  {{ govukButton({
    text: "Save and continue"
  }) }}
{% endblock %}
