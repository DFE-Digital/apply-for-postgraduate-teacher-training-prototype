{% extends "_content-wide.njk" %}

{% set applicationPath = "/application/" + applicationId %}
{% set referrer = applicationPath + "/other-qualifications/review" %}
{% set title = "Other relevant qualifications" %}
{% set review = true %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/application/" + applicationId,
    text: "Back to application"
  }) }}
{% endblock %}

{% block primary %}
  {% for qualification in applicationValue(["other-qualifications"]) | toArray %}
    {% include "_includes/review-other-qualification.njk" %}
  {% endfor %}
  {{ govukButton({
    text: "Add another qualification",
    classes: "govuk-button--secondary",
    href: applicationPath + "/other-qualifications/add"
  }) }}

  {{ govukButton({
    text: "Continue",
    href: applicationPath
  }) }}
{% endblock %}
