{% extends "_content-wide.njk" %}
{% set applicationPath = "/application/" + applicationId %}
{% set title = "Other qualifications" %}
{% set categoryCaptionSize = "m" %}

{% block pageNavigation %}
  {{ govukBackLink({ href: "/application/" + applicationId, text: 'Back to application' }) }}
{% endblock %}

{% block primary %}
  {% set referrer = applicationPath + "/other-qualifications/review" %}
  {% set categoryTitle = "Degree(s)" %}
  {% include "_includes/review-other-qualifications.njk" %}
  {{ govukButton({
    text: "Add another qualification",
    classes: "govuk-button--secondary",
    href: applicationPath + "/other-qualifications/add?referrer=" + referrer
  }) }}

  {{ govukButton({
    text: "Continue",
    href: applicationPath
  }) }}
{% endblock %}
