{% extends "_form.njk" %}

{% set formaction = referrer or "/application/" + applicationId + "/interview/review" %}
{% set title = "Interview preferences" %}

{% block pageNavigation %}
  {% if referrer %}
    {{ govukBackLink({
      href: referrer
    }) }}
  {% else %}
    {{ govukBackLink({
      href: "/application/" + applicationId,
      text: "Back to application"
    }) }}
  {% endif %}
{% endblock %}

{% block primary %}

  <p class="govuk-body">Your interview will usually take place over the course of a day and you will need to attend in person. Please give details of:</p>
  <ul class="govuk-list govuk-list--bullet">
    <li>any disability, health or personal issue you feel is relevant</li>
    <li>special arrangements or assistance you may need</li>
    <li>dates you are unavailable for interview</li>
  </ul>

  {% set interviewHtml %}
    {{ govukCharacterCount({
      label: {
        text: "What are your interview preferences?"
      },
      maxwords: 150,
      threshold: 75,
      rows: 6
    } | decorateApplicationAttributes(["interview"])) }}
  {% endset %}

  {{ govukRadios({
    fieldset: {
      legend: {
        classes: "govuk-fieldset__legend--m",
        text: "Do you have any preferences for your interview?"
      }
    },
    items: [{
      text: "Yes",
      conditional: {
        html: interviewHtml
      }
    }, {
      text: "No"
    }]
  } | decorateApplicationAttributes(["interview-choice"])) }}

  {{ govukButton({
    text: "Save and continue"
  }) }}
{% endblock %}
