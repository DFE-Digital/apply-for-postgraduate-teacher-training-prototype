{% extends "_form.njk" %}

{% set title = "Add English GCSE or equivalent" %}
{% set parent = "Eligibility and qualifications" %}
{% set formAction = "/application/academic-qualifications" %}

{% block primary %}
{% set validateEquivalence %}
  {{ govukInput({
    label: {
      text: "Please explain how you plan to validate this qualification"
    },
    id: "english-qualification-equivalence",
    name: "english-qualification-equivalence"
  }) }}
{% endset -%}

{% set internationalQualification %}
  {{ appAutocomplete({
    label: {
      text: "In which country did you gain this qualification?"
    },
    id: "english-qualification-country",
    name: "english-qualification-country",
    items: countries
  }) }}

  {{ govukRadios({
    fieldset: {
      legend: {
        text: "Have you got a NARIC statement of comparability?"
      }
    },
    idPrefix: "english-qualification-naric",
    name: "english-qualification-naric",
    items: [{
      value: "yes",
      text: "Yes"
    }, {
      value: "no",
      text: "No",
      conditional: {
        html: validateEquivalence
      }
    }]
  }) }}
{% endset -%}

  {{ govukInput({
    label: {
      text: "Type of qualification",
      classes: "govuk-label--s"
    },
    hint: {
      text: "GCSE, O level, or other (please specify)"
    },
    id: "english-qualification-type",
    name: "english-qualification-type"
  }) }}

  {{ govukInput({
    label: {
      text: "Grade",
      classes: "govuk-label--s"
    },
    id: "english-qualification-grade",
    name: "english-qualification-grade"
  }) }}

  {{ govukInput({
    label: {
      text: "Year qualification was awarded",
      classes: "govuk-label--s"
    },
    id: "english-qualification-year",
    name: "english-qualification-year",
    classes: "govuk-input--width-4"
  }) }}

  {{ govukRadios({
    fieldset: {
      legend: {
        text: "Is this an international qualification?",
        classes: "govuk-fieldset__legend--s"
      }
    },
    idPrefix: "english-qualification-international",
    name: "english-qualification-international",
    items: [{
      value: "yes",
      text: "Yes",
      conditional: {
        html: internationalQualification
      }
    }, {
      value: "no",
      text: "No"
    }]
  }) }}

  {{ govukInput({
    label: {
      text: "I donâ€™t have this qualification yet",
      classes: "govuk-label--s"
    },
    hint: {
      text: "Please explain how you plan to meet this requirement in time for the start of your course."
    },
    id: "english-qualification-missing",
    name: "english-qualification-missing"
  }) }}

  {{ govukButton({
    text: "Add English GCSE or equivalent"
  }) }}
{% endblock %}
{% block pageScripts %}
  <script type="text/javascript" src="/public/javascripts/autocomplete.min.js"></script>
  <script type="text/javascript">
    accessibleAutocomplete.enhanceSelectElement({
      defaultValue: '',
      selectElement: document.querySelector('#english-qualification-country')
    })
  </script>
{% endblock %}
