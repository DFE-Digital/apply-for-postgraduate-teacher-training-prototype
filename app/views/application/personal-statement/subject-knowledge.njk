{% extends "_form.njk" %}

{% set formaction = referrer or "/application/" + applicationId + "/personal-statement/" + providerCode + "/review" %}
{% set parent = provider.name %}
{% set title = "What do you know about the subject you want to teach?" %}

{% block pageNavigation %}
  {% if referrer %}
    {{ govukBackLink({
      href: referrer
    }) }}
  {% else %}
    {{ govukBackLink({
      href: "/application/" + applicationId,
      text: "Back to application"
    }) }}
  {% endif %}
{% endblock %}

{% block primary %}
  {% set course = providerCode | getCourseFromProviderCode %}
  {% if course and course.name.includes("Primary") %}
    <p class="govuk-body">Tell this provider why you are a suitable candidate for teaching the primary curriculum.</p>
    <p class="govuk-body">You can include:</p>
    <ul class="govuk-list govuk-list--bullet">
      <li>the abilities and skills you would contribute</li>
      <li>your A level subjects</li>
      <li>expertise you’ve gained at work</li>
      <li>subjects you have a particular interest or talent in (for example, drama, music, art or sport)</li>
    </ul>
  {% else %}
    <p class="govuk-body">Give us detailed evidence for the knowledge and interest you bring to {{ course.name }}.</p>
    <p class="govuk-body">Evidence can include:</p>
    <ul class="govuk-list govuk-list--bullet">
      <li>the subject of your undergraduate degree</li>
      <li>modules you studied as part of your degree</li>
      <li>postgraduate degrees (for example, a Masters or PhD)</li>
      <li>your A level subjects</li>
      <li>expertise you’ve gained at work</li>
    </ul>
  {% endif %}

  {{ govukCharacterCount({
    label: {
      text: "Enter your subject knowledge",
      classes: "govuk-label--m govuk-!-margin-top-6"
    },

    maxwords: 400,
    rows: 24
  } | decorateApplicationAttributes(["personal-statements", providerCode, "subject-knowledge"])) }}

  {{ govukButton({
    text: "Continue"
  }) }}
{% endblock %}
