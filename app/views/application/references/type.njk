{% extends "_form-question.njk" %}

{% set referee = applicationValue(["references", id]) %}
{% set parent = referee.name %}
{% set title = "What kind of reference can this referee give?" %}
{% set formaction = referrer or "/application/" + applicationId + "/references/" + id + "/relationship/" %}

{% block pageNavigation %}
  {% if referrer %}
    {{ govukBackLink({
      href: referrer
    }) }}
  {% else %}
    {{ govukBackLink({
      href: "/application/" + applicationId + "/references/" + id + "/email/"
    }) }}
  {% endif %}
{% endblock %}

{% block primary %}
  {{ govukRadios({
    fieldset: {
      legend: label,
      hint: {
        text: "afsdaf"
      }
    },
    items: [{
      text: "Academic"
    }, {
      text: "Professional"
    }, {
      text: "Character",
      hint: {
        text: "Training providers will only accept a character reference if thereâ€™s also an academic or professional reference."
      }
    }]
  } | decorateApplicationAttributes(["references", id, "type"])) }}

  {{ govukButton({
    text: "Save changes" if referrer else "Save and continue"
  }) }}
{% endblock %}
