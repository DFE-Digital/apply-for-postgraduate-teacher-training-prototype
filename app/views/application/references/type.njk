{% extends "_form.njk" %}

{% set title = (id | capitalize) + " referee" %}

{% block pageNavigation %}
  {% if referrer %}
    {{ govukBackLink({
      href: referrer
    }) }}
  {% else %}
    {{ govukBackLink({
      href: "/application/" + applicationId + "/references"
    }) }}
  {% endif %}
{% endblock %}

{% block primary %}
  <p class="govuk-body">Referees should not be family members, partners or friends.</p>
  <p class="govuk-body">If you’re struggling to find a suitable referee, contact your provider to discuss this.</p>

  {{ govukRadios({
    fieldset: {
      legend: {
        text: "What kind of reference is this?",
        classes: "govuk-fieldset__legend--m"
      }
    },
    items: [{
      text: "Academic",
      label: {
        classes: "govuk-label--s"
      },
      hint: {
        text: "For example, your university tutor or supervisor. Choose an academic referee if you graduated in the last 5 years or you have a predicted grade for your degree."
      }
    }, {
      text: "Professional",
      label: {
        classes: "govuk-label--s"
      },
      hint: {
        text: "For example, your current line manager or a previous employer. If you’re self-employed, you could use a client or supplier."
      }
    }, {
      text: "School-based",
      label: {
        classes: "govuk-label--s"
      },
      hint: {
        text: "For example, a teacher at a school where you’ve volunteered or gained experience."
      }
    }, {
      divider: "or"
    }, {
      text: "Character",
      label: {
        classes: "govuk-label--s"
      },
      hint: {
        text: "Choose a responsible person who can confirm you’re suitable for teaching – for example, a sports coach. Training providers will only accept character references if there’s also an academic or professional reference."
      }
    }]
  } | decorateApplicationAttributes(["referees", id, "type"])) }}

  {{ govukButton({
    text: "Save and continue"
  }) }}
{% endblock %}
