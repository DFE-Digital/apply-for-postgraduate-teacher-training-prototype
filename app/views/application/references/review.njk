{% extends "_content-wide.njk" %}
{% set applicationPath = '/application/' + applicationId %}
{% set title = "References" %}
{% set referrer = applicationPath + "/references/review" %}

{% block pageNavigation %}
  {{ govukBreadcrumbs({
    items: applicationBreadcrumbItems
  }) }}
{% endblock %}

{% block primary %}
  {% include "_includes/review-references.njk" %}
  {% if not applicationValue(["referees", "second"]) %}
    {{ govukButton({
      text: "Add a second referee",
      href: applicationPath + "/references/add/referee/second",
      classes: "govuk-button--secondary"
    }) }}
  {% endif %}
  {{ govukButton({
    text: "Continue",
    href: applicationPath
  }) }}
{% endblock %}
