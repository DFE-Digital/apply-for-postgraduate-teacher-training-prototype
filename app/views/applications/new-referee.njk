{% extends "_content.njk" %}
{% set applicationPath = "/application/12345" %}
{% set choices = 2 %}
{% set referee1name = "Carmel Kohler" %}
{% set referee2name = "Glinda Baumbach" %}
{% set providerPlural = "providers" if choices > 1 else "provider" %}

{% block primary %}
  <h1 class="govuk-heading-xl">You need to add a new referee</h1>

  {% if reason == "overdue" %}
    <p class="govuk-body">{{ referee1name }} has not responded.</p>
  {% elif reason == "cancelled" %}
    <p class="govuk-body">You cancelled your request for a reference from {{ referee1name }}.</p>
  {% elif reason == "declined" %}
    <p class="govuk-body">{{ referee1name }} declined to give a reference.</p>
  {% endif %}

  <p class="govuk-body">Add a new referee as soon as possible. Courses can become full at any time and your {{ providerPlural }} will not consider your application without 2 references.</p>

  {% if reason == "overdue" %}
    <p class="govuk-body">Adding a new referee will not prevent {{ referee1name }} from giving a reference. You can keep chasing {{ referee1name }} if you know theyâ€™re planning on giving a reference.</p>
  {% endif %}

  <div class="govuk-!-margin-top-6 govuk-!-margin-bottom-4">
    {{ govukButton({
      text: "Add a new referee",
      href: applicationPath + "/references/alternative"
    }) }}
  </div>

  <p><a href="/applications">Continue without adding a new referee</a></p>
{% endblock %}
