{% extends "_form.njk" %}

{% set title = "Change your email address" %}
{% set formaction = "/account/check-email/change-email-address" %}
{% set isSignedOut = true %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/"
  }) }}
{% endblock %}

{% block primary %}
  <p class="govuk-body-l">Update the email address you want to use to access this service.</p>

  {{ govukInput({
    label: {
      text: "New email address",
      classes: "govuk-label--m"
    },
    hint: {
      text: "Donâ€™t use a work or university email address you might lose access to"
    },
    classes: "govuk-!-width-two-thirds",
    autocomplete: "email",
    type: "email",
    id: "account-email",
    name: "account[email]"
  }) }}

  {{ govukButton({
    text: "Continue"
  }) }}
{% endblock %}
