{% extends "_form.njk" %}

{% set title = "Reset password" %}
{% set hasSecondary = true %}

{% block primary %}
  <p class="govuk-body-l">Enter your email address to reset your password.</p>

  {{ govukInput({
    label: {
      text: "Email address",
      classes: "govuk-label--s"
    },
    classes: "govuk-!-width-two-thirds",
    autocomplete: "email",
    type: "email",
    id: "candidate-email",
    name: "candidate[email]"
  }) }}

  {{ govukButton({
    text: "Reset password"
  }) }}
{% endblock %}
