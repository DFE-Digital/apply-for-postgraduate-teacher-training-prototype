{% extends "_form.njk" %}

{% set title = "Please give us your email address" %}
{% set formaction = "/send-email/create-account" %}
{% set isSignedOut = true %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/"
  }) }}
{% endblock %}

{% block primary %}
  <p class="govuk-body-l">You’ll then be able to save and return to your application.</p>

  {{ govukInput({
    label: {
      text: "Email address",
      classes: "govuk-label--m"
    },
    hint: {
      text: "Don’t use a work or university email address you might lose access to"
    },
    classes: "govuk-!-width-two-thirds",
    attributes: {
      spellcheck: "false"
    },
    autocomplete: "email",
    type: "email",
    id: "account-email",
    name: "account[email]"
  }) }}

  {{ govukButton({
    text: "Continue"
  }) }}
{% endblock %}
