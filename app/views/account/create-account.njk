{% extends "_form.njk" %}

{% set title = "Before you begin" %}
{% set formaction = "/account/check-email/create-account" %}
{% set isSignedOut = true %}

{% block primary %}
  <p class="govuk-body-l">Please provide an email address to create an account. You’ll use this to save your applications and and return to them as often as you need to.</p>

  {{ govukInput({
    label: {
      text: "Email address"
    },
    hint: {
      text: "Don’t use a work or university email address you might lose access to"
    },
    classes: "govuk-!-width-two-thirds",
    autocomplete: "email",
    type: "email",
    id: "candidate-email",
    name: "candidate[email]"
  }) }}

  {{ govukButton({
    text: "Continue"
  }) }}
{% endblock %}
