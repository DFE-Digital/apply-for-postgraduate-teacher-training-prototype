{% extends "_form.njk" %}

{% set title = "Enter your email to create an account" %}
{% set formaction = "/send-email/create-account" %}
{% set hasAccountLinks = true %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/"
  }) }}
{% endblock %}

{% block primary %}

<h2 class="govuk-heading-m">You won't need a password</h2>
<p class="govuk-body">Sign in with your email every time you return to the service, and we'll send you a link giving you access to your account.</p>
  {{ govukInput({
    label: {
      text: "Enter email",
      classes: "govuk-label--m"
    },
    hint: {
      text: "Don’t use a work or university email address you might lose access to"
    },
    classes: "govuk-!-width-two-thirds",
    attributes: {
      spellcheck: "false"
    },
    autocomplete: "email",
    type: "email",
    id: "account-email",
    name: "account[email]"
  }) }}



  <h2 class="govuk-heading-m">Your data</h2>
  <p class="govuk-body">We use your personal information to process your application and improve the Apply for teacher training service.</p>
  <p class="govuk-body">Our <a href="/privacy-statement">privacy policy</a> has more detail about our data responsibilities and your data rights.</p>

  <h2 class="govuk-heading-m">Terms of use</h2>
  <p class="govuk-body">Our <a href="/terms-of-use">terms of use</a> contain some important rules about using this service. For example, you must:
    <ul class="govuk-list govuk-list--bullet">
      <li>apply to a maximum of 3 courses</li>
      <li>accept only one offer</li>
      </ul>
  <p class="govuk-body">We also explain:</p>
  <ul class="govuk-list govuk-list--bullet">
      <li>how to contact us if you need help</li>
      <li>how we check you’re safe to work with children</li>
      <li>how to change or withdraw your application</li>
    </ul>
    <p class="govuk-body">We suggest you read our <a href="/terms-of-use">terms of use</a> before starting your application.</p>

  {{ govukCheckboxes({
    items: [{
      value: "true",
      html: "I agree to the <a href=\"/terms-of-use\">terms of use</a>"
    }],
    name: "terms"
  }) }}

  {{ govukButton({
    text: "Create account"
  }) }}
{% endblock %}
