{% extends "_form.njk" %}

{% set title = "Create an " + serviceName + " account" %}
{% set formaction = "/send-email/create-account" %}
{% set hasAccountLinks = true %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/"
  }) }}
{% endblock %}

{% block primary %}
  {{ govukInput({
    label: {
      text: "Enter your email address",
      classes: "govuk-label--m"
    },
    hint: {
      text: "Don’t use a work or university email address you might lose access to"
    },
    classes: "govuk-!-width-two-thirds",
    attributes: {
      spellcheck: "false"
    },
    autocomplete: "email",
    type: "email",
    id: "account-email",
    name: "account[email]"
  }) }}

  <h2 class="govuk-heading-m">You won’t need a password to use this service</h2>
  <p class="govuk-body">Instead, you’ll sign in using your email address. Each time you sign in, we'll send you a link so you can return to your application.</p>

  <h2 class="govuk-heading-m">Terms and conditions</h2>
  <p class="govuk-body">Our <a href="/terms-conditions">terms and conditions</a> contain important information about:</p>
  <ul class="govuk-list govuk-list--bullet">
    <li>the application process</li>
    <li>contacting us</li>
    <li>our use of your data</li>
    <li>checking you’re safe to work with children</li>
  </ul>

  {{ govukCheckboxes({
    items: [{
      value: "true",
      text: "I agree to the terms and conditions"
    }],
    name: "terms"
  }) }}

  {{ govukButton({
    text: "Create account"
  }) }}
{% endblock %}
