{% extends "_form.njk" %}

{% set title = "Sign in" %}
{% set formaction = "/account/check-email/sign-in" %}
{% set isSignedOut = true %}

{% block primary %}
  <p class="govuk-body-l">Enter the email address you used to register with, and we will send you a link to sign in.</p>

  {{ govukInput({
    label: {
      text: "Email address"
    },
    classes: "govuk-!-width-two-thirds",
    autocomplete: "email",
    type: "email",
    id: "candidate-email",
    name: "candidate[email]"
  }) }}

  {{ govukButton({
    text: "Continue"
  }) }}
{% endblock %}
