{% from "govuk/components/button/macro.njk" import govukButton %}

{% set applyAgainHtml %}
  {% set choicesAllowed = 3 - numberOfPendingChoices() %}
  <p class="govuk-body">You can apply for
    {% if choicesAllowed == 1 %}
      1 other course.
    {% else %}
      up to {{ choicesAllowed }} other courses.
    {% endif %}
  </p>

  <form action="/application/apply-again" method="POST">
    {{ govukButton({
      text: "Apply for another course",
      classes: "govuk-button--secondary"
    }) }}
  </form>
{% endset %}

{{ govukInsetText({
  html: applyAgainHtml,
  classes: "govuk-!-margin-top-0"
}) }}
